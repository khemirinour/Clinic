                                cellContent += emploi.reposName + '<br>';
                            }

                            if (emploi.supplementId) {
                                cellContent += emploi.supplementName + '<br>';
                            }

                            cell.html(cellContent);
                        });
                    } else {
                        alert("Aucun emploi trouvé pour les critères sélectionnés.");
                    }
                },
                error: function (xhr, status, error) {
