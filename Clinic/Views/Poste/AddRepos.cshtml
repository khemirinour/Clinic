@model Clinic.Models.Repos


<h1>Ajouter un repos</h1>

<form asp-action="AddRepos">
    <div class="form-group">
        <label asp-for="ReposName" class="control-label">Nom du repos :</label>
        <input asp-for="ReposName" class="form-control">
        <span asp-validation-for="ReposName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date_Jours">Date du jour :</label>
        <input asp-for="Date_Jours" type="date">
        <span asp-validation-for="Date_Jours"></span>
    </div>
    <div>
        <label asp-for="CategorieId" class="control-label">Catégorie :</label>
        <select asp-for="CategorieId" class="box" asp-items="@ViewBag.CategorieList">
            <option value="">Sélectionnez une catégorie</option>
        </select>
        <span asp-validation-for="CategorieId" class="text-danger"></span>
    </div>
   
    <!-- Autres champs pour le repos -->
    <button type="submit" class="btn">Ajouter</button>
</form>
