@model Clinic.Models.Poste
@{
    ViewData["Title"] = "Créer un nouveau poste";
}
<h1>Créer un nouveau poste</h1>



<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Postename" class="control-label">Nom du poste :</label>
        <input asp-for="Postename" class="form-control" />
        <span asp-validation-for="Postename" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Séances :</label><br />
        <label><input type="checkbox" asp-for="Matin"> Matin</label><br />
        <label><input type="checkbox" asp-for="ApresMidi"> Après-midi</label><br />
        <label><input type="checkbox" asp-for="GardeSoir"> Garde de soir</label>
    </div>
    <div class="form-group">
        <label>Séance 1 :</label><br />
        <label>Début :</label>
        <input asp-for="Seance1Debut" type="datetime-local" class="form-control">
        <label>Fin :</label>
        <input asp-for="Seance1Fin" type="datetime-local" class="form-control">
    </div>

    <div class="form-group">
        <label>Séance 2 :</label><br />
        <label>Début :</label>
        <input asp-for="Seance2Debut" type="datetime-local" class="form-control">
        <label>Fin :</label>
        <input asp-for="Seance2Fin" type="datetime-local" class="form-control" >
    </div>

    <div class="form-group">
        <label><input type="checkbox" asp-for="Actif"> Actif?</label>

     
    </div>
    <div class="form-group">
        <label asp-for="CategorieId" class="control-label">Catégorie :</label>
        <select asp-for="CategorieId" asp-items="ViewBag.CategorieList" class="form-control">
            <option value="">Sélectionnez une catégorie</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Créer</button>
</form>
