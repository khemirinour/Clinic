@model List<Clinic.Models.EmploiViewModel>

<input type="hidden" id="serviceId" value="@ViewBag.ServiceId" />

<h1>Approve Registration Requests</h1>

@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Employee ID</th>
                <th>Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.EmployeeId</td>
                    <td>@employee.EmployeeName</td>
                    <td>
                        <form asp-controller="Account" asp-action="ApproveRegistration" method="post">
                            <input type="hidden" name="employeeId" value="@employee.EmployeeId" />
                            <input type="hidden" name="serviceId" value="@ViewBag.ServiceId" />
                            <button type="submit" class="btn btn-success">Approve</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No registration requests to approve.</p>
}

<script>
    var serviceId = sessionStorage.getItem("serviceId");
    console.log("Service ID:", serviceId);

    document.getElementById("serviceId").value = serviceId;
</script>
