@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Employee ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model)
            {
                <tr>
                    <td>@request.EmployeeId</td>
                    <td>@request.Name</td>
                    <td>@request.Email</td>
                    <!-- Autres colonnes pour afficher d'autres détails de la demande d'inscription -->
                    <td>
                        <form asp-action="ApproveRegistration" method="post">
                            <input type="hidden" name="employeeId" value="@request.EmployeeId" />
                            <button type="submit" class="btn btn-success">Approve</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Aucune demande d'inscription en attente.</p>
}
