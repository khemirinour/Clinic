@model IEnumerable<Clinic.Models.Employee>

@{
    ViewData["Title"] = "Approve Registration Requests";
}

<h1>Approve Registration Requests</h1>
<input type="hidden" id="serviceId">
<!-- Value will be set dynamically -->
@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Employee ID</th>
                <th>Name</th>
                <th>Service</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.EmployeeId</td>
                    <td>@employee.Name ?? "No Name"</td>
                    <td>@employee.Service?.Name ?? "No Service"</td> 
                    <td>
                        <form asp-action="ApproveRegistration" method="post">
                            <input type="hidden" name="employeeId" value="@employee.EmployeeId" />
                            <button type="submit" class="btn btn-success">Approve</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No pending registration requests.</p>
}

